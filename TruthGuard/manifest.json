{
  "manifest_version": 3,
  "name": "NewsVerify - Fact Checking Extension",
  "version": "1.0.0",
  "description": "Instantly verify news and image claims",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}